секція РМв1 {
  структура Назва;
  структура Обʼєкт;
  структура Середовище;
  структура Виконувач;
  структура Розширення;

  структура Результат {
    успіх: логічне;
    значення: адреса<Обʼєкт>;
  }

  структура Розширення {
    В: адреса<Виконувач>;
    обʼєкт_модуля: адреса<Обʼєкт>;
    дані: адреса;
  }

  дія отримати_виконувач(Р: адреса<Розширення>): адреса<Виконувач> {
    вернути Р.В;
  }

  дія отримати_обʼєкт_модуля(Р: адреса<Розширення>): адреса<Обʼєкт> {
    вернути Р.обʼєкт_модуля;
  }

  дія записати_дані_розширення(Р: адреса<Розширення>, дані: адреса) {
    Р.дані = дані;
  }
}

