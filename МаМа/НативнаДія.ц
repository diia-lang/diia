взяти визначення МаМа;

секція МаМа {
  місцева дія обʼєкт_нативної_дії_виконати(я: адреса<Обʼєкт>, М: адреса<Машина>, середовище: адреса<Середовище>, аргументи: адреса<Вектор<адреса<Обʼєкт>>>, аргументи_з_назвами: адреса_або_пусто<Реєстр<адреса<Назва>, адреса<Обʼєкт>>>): адреса_або_стан_помилки<Обʼєкт> {
    вернути (я.дані як ДаніОбʼєктаНативноїДії)(я, М, середовище, аргументи, аргументи_з_назвами);
  }

  місцева дія виділити_обʼєкт_нативної_дії(М: адреса<Машина>, дія_виконання: (я: адреса<Обʼєкт>, М: адреса<Машина>, середовище: адреса<Середовище>, аргументи: адреса<Вектор<адреса<Обʼєкт>>>, аргументи_з_назвами: адреса_або_пусто<Реєстр<адреса<Назва>, адреса<Обʼєкт>>>) -> адреса_або_стан_помилки<Обʼєкт>): адреса<Обʼєкт> {
    ціль обʼєкт_дії = виділити_обʼєкт(М, М.обʼєкт_структури_НативнаДія);
    обʼєкт_дії.дані = дія_виконання;
    вернути обʼєкт_дії;
  }
}