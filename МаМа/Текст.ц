взяти визначення МаМа;

секція МаМа {
  місцева дія надрукувати_обʼєкт_тексту_в_буфер_ю8(М: адреса<Машина>, буфер_ю8: адреса<БуферЮ8>, обʼєкт: адреса<Обʼєкт>, глибина: позитивне) {
    ціль ю8 = перетворити_ю32_в_ю8(обʼєкт.дані як Ю32);
    якщо глибина > 0 {
      додати_до_буфера_ю8(буфер_ю8, ю8"\"");
    }
    додати_до_буфера_ю8(буфер_ю8, ю8);
    якщо глибина > 0 {
      додати_до_буфера_ю8(буфер_ю8, ю8"\"");
    }
    звільнити(ю8);
  }

  місцева дія виділити_обʼєкт_тексту(М: адреса<Машина>, значення: Ю32): адреса<Обʼєкт> {
    ціль обʼєкт_тексту = виділити_обʼєкт(М, М.обʼєкт_структури_текст);
    обʼєкт_тексту.дані = виділити_копію_ю32(значення);
    вернути обʼєкт_тексту;
  }

  місцева дія виділити_обʼєкт_тексту_з_ю8(М: адреса<Машина>, значення: Ю8): адреса<Обʼєкт> {
    ціль ю32 = перетворити_ю8_на_ю32(значення);
    ціль обʼєкт_тексту = виділити_обʼєкт_тексту(М, ю32);
    звільнити(ю32);
    вернути обʼєкт_тексту;
  }
}