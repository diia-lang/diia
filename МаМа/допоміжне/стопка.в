взяти визначення МаМа/допоміжне/біб;

структура Стопка<Т>;

структура Стопка<Т> {
  розмір: позитивне;
  дані: памʼять<Т>;
}

дія зробити_стопку<Т>(): Стопка<Т> {
  ціль стопка = Стопка<Т> {};
  стопка.розмір = 0;
  стопка.дані = пусто;
  вернути стопка;
}

дія покласти_на_стопку<Т>(стопка: адреса<Стопка<Т>>, дані: Т) {
  стопка.дані = перевиділити<Т>(стопка.дані, (стопка.розмір + 1) як ц32);
  стопка.дані[стопка.розмір] = дані;
  стопка.розмір = стопка.розмір + 1;
}

дія забрати_зі_стопки<Т>(стопка: адреса<Стопка<Т>>): Т {
  ціль дані = стопка.дані[стопка.розмір - 1];
  стопка.розмір = стопка.розмір - 1;
  вернути дані;
}

дія звільнити_значення_стопки<Т>(стопка: Стопка<Т>) {
  звільнити(стопка.дані);
}

дія звільнити_стопку<Т>(стопка: адреса<Стопка<Т>>) {
  звільнити(стопка.дані);
  звільнити(стопка);
}