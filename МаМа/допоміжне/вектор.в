взяти визначення МаМа/допоміжне/біб;

структура Вектор<Т> {
  довжина: позитивне;
  дані: памʼять<Т>;
}

дія зробити_вектор<Т>(): Вектор<Т> {
  ціль вектор = Вектор<Т> {};
  вектор.довжина = 0;
  вектор.дані = пусто;
  вернути вектор;
}

дія виділити_вектор<Т>(): адреса<Вектор<Т>> {
  ціль вектор = виділити<Вектор<Т>>();
  вектор.довжина = 0;
  вектор.дані = пусто;
  вернути вектор;
}

дія додати_до_вектору<Т>(вектор: адреса<Вектор<Т>>, дані: Т) {
  вектор.дані = перевиділити<Т>(вектор.дані, (вектор.довжина + 1) як ц32);
  вектор.дані[вектор.довжина] = дані;
  вектор.довжина = вектор.довжина + 1;
}

дія забрати_з_вектору<Т>(вектор: адреса<Вектор<Т>>): Т {
  ціль дані = вектор.дані[вектор.довжина - 1];
  вектор.довжина = вектор.довжина - 1;
  вернути дані;
}

дія звільнити_значення_вектора<Т>(вектор: Вектор<Т>) {
  звільнити(вектор.дані);
}

дія звільнити_вектор<Т>(вектор: адреса<Вектор<Т>>) {
  звільнити(вектор.дані);
  звільнити(вектор);
}

дія обернути_вектор<Т>(вектор: адреса<Вектор<Т>>) {
  якщо вектор.довжина == 0 {
    вернути;
  }
  змінна ціль па: позитивне = 0;
  змінна ціль пб: позитивне = вектор.довжина - 1;
  поки па < пб {
    змінна ціль тимчасове = вектор.дані[па];
    вектор.дані[па] = вектор.дані[пб];
    вектор.дані[пб] = тимчасове;
    па = па + 1;
    пб = пб - 1;
  }
}