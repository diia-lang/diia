взяти визначення МаМа;

секція МаМа {
  місцева дія надрукувати_обʼєкт_тексту_в_буфер_ю8(обʼєкт_тексту: адреса<ОбʼєктТексту>, М: адреса<Машина>, буфер_ю8: адреса<БуферЮ8>, глибина: позитивне) {
    ціль ю8 = перетворити_ю32_в_ю8(обʼєкт_тексту.значення);
    якщо глибина > 0 {
      додати_до_буфера_ю8(буфер_ю8, ю8"\"");
    }
    додати_до_буфера_ю8(буфер_ю8, ю8);
    якщо глибина > 0 {
      додати_до_буфера_ю8(буфер_ю8, ю8"\"");
    }
    звільнити(ю8);
  }

  місцева дія створити_текст(М: адреса<Машина>, значення: Ю32): адреса<ОбʼєктТексту> {
    ціль обʼєкт_тексту = виділити<ОбʼєктТексту>();

    обʼєкт_тексту.наступний_обʼєкт = М.утилізатор.початок_обʼєктів;
    обʼєкт_тексту.позначено = ні;
    обʼєкт_тексту.тип = М.обʼєкт_структури_текст;
    М.утилізатор.початок_обʼєктів = обʼєкт_тексту як адреса<Обʼєкт>;
    М.утилізатор.кількість_обʼєктів = М.утилізатор.кількість_обʼєктів + 1;

    обʼєкт_тексту.значення = виділити_копію_ю32(значення);

    вернути обʼєкт_тексту;
  }

  місцева дія створити_текст_з_ю8(М: адреса<Машина>, значення: Ю8): адреса<ОбʼєктТексту> {
    ціль ю32 = перетворити_ю8_на_ю32(значення);
    ціль обʼєкт_тексту = створити_текст(М, ю32);
    звільнити(ю32);
    вернути обʼєкт_тексту;
  }

  місцева дія звільнити_обʼєкт_тексту(обʼєкт_тексту: адреса<ОбʼєктТексту>, М: адреса<Машина>) {
    звільнити(обʼєкт_тексту.значення);
    звільнити(обʼєкт_тексту);
  }
}