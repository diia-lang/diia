}

секція МаМа {
  дія перевірити_чи_обʼєкти_рівні(обʼєкт1: адреса<Обʼєкт>, обʼєкт2: адреса<Обʼєкт>): логічне {
    якщо обʼєкт1 == обʼєкт2 {
      вернути так;
    }
    вернути ні;
  }

  дія перевірити_чи_обʼєкт_рівно(обʼєкт: адреса<Обʼєкт>, М: адреса<Машина>, аргумент: адреса<Обʼєкт>): логічне {
    якщо обʼєкт == аргумент {
      вернути так;
    }
    вернути ні;
  }
}