взяти визначення МаМа;

секція мама {
  місцева дія створити_слово(назва: памʼять<п8>): комірка<Слово> {
    ціль слово = виділити<Слово>();
    слово.назва = ю8_клонувати(назва);
    вернути слово;
  }

  місцева дія отримати_або_створити_слово(М: комірка<Машина>, назва: памʼять<п8>): комірка<Слово> {
    змінна х = 0ц32;
    поки х < М.слова.довжина як ц32 {
      ціль слово = М.слова.дані[х];
      якщо strcmp(слово.назва, назва) == 0 {
        вернути слово;
      }
      х = х + 1;
    }
    ціль слово = створити_слово(назва);
    додати_до_вектору<комірка<Слово>>(М.слова, слово);
    вернути слово;
  }
}