взяти пак інструменти_тестування

значення = "Привіт від Лесі!"
інструменти_тестування.впасти_якщо_не_рівно(значення.довжина, 16)

інструменти_тестування.впасти_якщо_не_рівно(значення[0], 'П')
інструменти_тестування.впасти_якщо_не_рівно(значення[7], 'в')
інструменти_тестування.впасти_якщо_не_рівно(значення.чародія_отримати_елемент(11), 'Л')
інструменти_тестування.впасти_якщо_не_рівно(значення.чародія_отримати_елемент(15), '!')
