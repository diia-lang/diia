взяти визначення РМв1;

внутрішня дія нативна_дія_ехо(мавка: комірка<РМ::Мавка>, місцезнаходження: комірка<РМ::Місцезнаходження>, обʼєкт_нативної_дії: комірка<РМ::Обʼєкт>, кількість_аргументів: позитивне, аргументи: памʼять<РМ::Значення>): РМ::Результат {
  якщо кількість_аргументів < 1 {
    вернути РМ::Результат { ні, РМ::Значення { РМ::ЗОбʼєкт, дані = мавка.створити_помилку(мавка, місцезнаходження, ю8"Ой...") } };
  }
  вернути РМ::Результат { так, аргументи[0] };
}

зовнішня дія завантажити_розширення_мавки(мавка: комірка<РМ::Мавка>, середовище: комірка<РМ::Середовище>, обʼєкт_модуля: комірка<РМ::Обʼєкт>): РМ::Результат {
  ціль обʼєкт_нативної_дії_ехо = мавка.створити_нативну_дію(мавка, мавка.отримати_слово(мавка, ю8"ехо"), нативна_дія_ехо);
  ціль результат_зміни_властивості = мавка.змінити_властивість(мавка, обʼєкт_модуля, мавка.отримати_слово(мавка, ю8"ехо"), РМ::Значення { РМ::ЗОбʼєкт, дані = обʼєкт_нативної_дії_ехо });
  якщо результат_зміни_властивості.успіх == ні {
    вернути результат_зміни_властивості;
  }
  вернути РМ::Результат { так, РМ::Значення { РМ::ЗПусто } };
}