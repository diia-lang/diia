js """
м_Відповідь = мСтрк("Відповідь", [
  мПарм("код", м_число),
  мПарм("заголовки", м_словник),
  мПарм("дані", м_байти)
])
м_надіслати = мДія("надіслати", [
  мПарм("метод", м_текст, "GET"),
  мПарм("урл", м_текст, ""),
  мПарм("заголовки", м_словник, new Map()),
  мПарм("дані", [м_байти, м_текст], "")
], async function(args) {
  var method = (args[0] ?? args["метод"] ?? "GET").toUpperCase();
  var url = args[1] ?? args["урл"] ?? "";
  var headers = args[2] ?? args["заголовки"] ?? new Map();
  var body = args[3] ?? args["дані"] ?? "";

  const response = await fetch(url, {
    method,
    headers: Object.fromEntries(headers.entries()),
    body: method === "GET" || method === "HEAD" ? undefined : body
  });
  const bytes = new Uint8Array(await response.arrayBuffer());

  const headersDictionary = new Map();
  for (const [hk, vv] of response.headers.entries()) {
    headersDictionary.set(hk, vv);
  }

  return мВикл(
    м_Відповідь,
    [
      response.status,
      headersDictionary,
      bytes
    ]
  );
})
"""

макет структура Відповідь
  код число
  заголовки словник
  дані байти
кінець

макет тривала дія надіслати(метод текст = "GET", урл текст = "", заголовки словник = (), дані байти або текст = "")

дати Відповідь
дати надіслати