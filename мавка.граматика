лексика {
  фрагмент ЦИФРА: [0123456789];
  фрагмент ЛІТЕРА: [абвгґдеєжзиіїйклмнопрстуфхцчшщьюяАБВГҐДЕЄЖЗИІЇЙКЛМНОПРСТУФХЦЧШЩЬЮЯ];

  ДІЯ: 'д' 'і' 'я';
  КІНЕЦЬ: 'к' 'і' 'н' 'е' 'ц' 'ь';
  ВІДКРИТА_ДУЖКА: '(';
  ЗАКРИТА_ДУЖКА: ')';
  ІДЕНТИФІКАТОР: ЛІТЕРА (ЛІТЕРА | ЦИФРА)*;
  НОВИЙ_РЯДОК: '\r'? '\n';
}

правила {
  нр: НОВИЙ_РЯДОК+;
  мнр: НОВИЙ_РЯДОК*;

  дія: ДІЯ ІДЕНТИФІКАТОР ВІДКРИТА_ДУЖКА ЗАКРИТА_ДУЖКА нр тіло КІНЕЦЬ;
}