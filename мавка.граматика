лексика {
  ДІЯ: 'д' 'і' 'я';
  КІНЕЦЬ: 'к' 'і' 'н' 'е' 'ц' 'ь';
  ВІДКРИТА_ДУЖКА: '(';
  ЗАКРИТА_ДУЖКА: ')';
  ІДЕНТИФІКАТОР: [а-яА-Я_] [а-яА-Я0-9_]*;
  НОВИЙ_РЯДОК: '\r'? '\n';
}

правила {
  нр: НОВИЙ_РЯДОК+;
  мнр: НОВИЙ_РЯДОК*;

  дія: ДІЯ ІДЕНТИФІКАТОР ВІДКРИТА_ДУЖКА ЗАКРИТА_ДУЖКА нр тіло КІНЕЦЬ;
}